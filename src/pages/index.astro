---
import Page from '../layouts/Page.astro';

import AstroLogo from '../components/AstroLogo.astro';
import Card from '../components/Card.astro';
import Greeting from '../components/Greeting.tsx';

const pageTitle = 'Welcome to Astro';
---

<Page title={pageTitle}>
  <main class="HomePage">
    <div class="AstroLogoWrapper">
      <AstroLogo />
    </div>

    <h1>Welcome to <span class="text-gradient">Astro</span></h1>

    <Greeting client:load messages={['Hej', 'Hallo', 'Hola', 'Habari']} />

    <p class="Instructions">
      To get started, open the directory <code>src/pages</code> in your project.<br
      />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
    </p>

    <ul class="LinkList">
      <Card
        href="https://docs.astro.build/"
        title="Documentation"
        body="Learn how Astro works and explore the official API docs."
      />

      <Card
        href="https://astro.build/integrations/"
        title="Integrations"
        body="Supercharge your project with new frameworks and libraries."
      />

      <Card
        href="https://astro.build/themes/"
        title="Themes"
        body="Explore a galaxy of community-built starter themes."
      />

      <Card
        href="https://astro.build/chat/"
        title="Community"
        body="Come say hi to our amazing Discord community. ❤️"
      />
    </ul>
  </main>
</Page>

<style>
  .AstroLogoWrapper {
    z-index: -1;
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .text-gradient {
    background-image: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .Instructions {
    margin-bottom: 2rem;
    padding: 1.5rem;
    border: 1px solid rgb(var(--rgb-accent-light), 25%);
    border-radius: 8px;
    background: linear-gradient(
      rgb(var(--rgb-accent-dark), 66%),
      rgb(var(--rgb-accent-dark), 33%)
    );
  }

  .Instructions code {
    padding: 0.3em 0.4em;
    border-radius: 4px;
    font-size: 0.8em;
    font-weight: bold;
    color: var(--color-accent-light);
    background: rgb(var(--rgb-accent-light), 12%);
  }

  .Instructions strong {
    color: var(--color-accent-light);
  }

  .LinkList {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
