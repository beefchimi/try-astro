---
interface Props {
  platform:
    | 'discord'
    | 'facebook'
    | 'github'
    | 'instagram'
    | 'twitter'
    | 'youtube';
  username: string;
}

const {platform, username} = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: var(--color-primary);
    background-color: var(--color-accent);
    text-decoration: none;
  }
</style>
